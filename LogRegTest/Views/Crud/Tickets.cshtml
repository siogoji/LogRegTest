@model List<LogRegTest.Models.Ticket>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LogRegTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LogRegTest.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="section" id="abonements">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-heading">
                        <h2>Абонементи</h2>
                        <img src="images/line-dec.png" alt="">
                        <p>Оберіть підходящий абонемент для ваших потреб</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        <a asp-action="Create" class="btn btn-success">Додати абонемент</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center">Id</th>
                                <th class="text-center">Тип</th>
                                <th class="text-center">Період</th>
                                <th class="text-center">Ціна</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td class="text-center">@ticket.TicketId</td>
                                    <td class="text-center">@ticket.Type</td>
                                    <td class="text-center">@ticket.Period</td>
                                    <td class="text-center">@ticket.Price</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Crud" asp-route-id="@ticket.TicketId" class="btn btn-warning">Редагувати</a>
                                        <button class="btn btn-danger" onclick="confirmDelete(@ticket.TicketId)">Видалити</button>
                                        <a asp-action="Buy" asp-controller="Crud" asp-route-id="@ticket.TicketId" class="btn btn-primary">Купити</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>


   
    <script>
        function confirmDelete(trainerId) {
            window.location.href = "/Crud/Delete/" + trainerId;
        }
    </script>
  

</body>
</html>
